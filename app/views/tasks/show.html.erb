<h3>Task</h3>
<p>
  <strong>  Title:</strong>
    <%= @task.title %>
</p>
<p>
  <strong> Text:</strong>
  <%= @task.text %>
</p>
<% if @task.attachment_file_name %>
<p>
  <strong>File:</strong>
  <br>
  <%= image_tag @task.attachment.url(:large) %>
</p>
    <% end %>

<% if @task.user_id == current_user.id%>
    <%= link_to 'Edit', edit_task_path %>
    <% end %>
<%= link_to 'Back', tasks_path %>