<p id="notice"><%= notice %></p>
<h3>Tasks list</h3>
<% if @new_tasks.empty? %>
    <i>No new tasks</i>
<% else %>
    <p>
      <strong><i>New tasks</i></strong>
    </p>
    <% @new_tasks.each do |t| %>
        <p>
          <strong>
            <%= link_to t.title, task_path(t) %>
          </strong>
        </p>
    <% end %>
<% end %>
<br>
<% if @closed_tasks.empty? %>
    <i>No closed tasks</i>
<% else %>
    <p>
      <strong><i>Closed tasks</i></strong>
    </p>
    <% @closed_tasks.each do |t| %>
        <p>
          <strong>
            <%= link_to t.title, task_path(t) %>
          </strong>
        </p>
    <% end %>
<% end %>
<br>
<%= link_to 'New task', new_task_path %>