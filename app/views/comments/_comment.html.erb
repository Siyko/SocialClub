   <p>
           <%= User.find(comment.user_id).username%>:
           <%= comment.body %>
          </p>

   <% if comment.user_id == current_user.id %>
         <p>
       <%= link_to 'Delete comment', [comment.task, comment],
                                method: :delete,
                          data: { confirm: 'Are you sure?' } %>
       </p>
       <% end %>